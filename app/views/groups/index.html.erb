<p id="notice"><%= notice %></p>
<section class="groups">
  <h1>Groups</h1>
  <% @groups.each do |group|%>
    <%= link_to  group_path(group.id), class: 'card-link' do %>
      <div class="card-group">
        <img src='<%=  group.icon %>' alt="logo">
        <div class="card-center">
          <h5><%= group.name %></h5>
          <h6><%= group.created_at %></h6>
        </div>
        <div class="h4"> <%= group.total %> $</div>
      </div>
    <% end %>
  <% end %>
  <br>
  <%= link_to 'Add new category', new_group_path, class: 'btn btn-success' %>
</section>
